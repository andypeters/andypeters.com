---
layout: default
---

<div class="mx-4 lg:m-auto lg:w-2/3">

    <h1 class="text-5xl lg:text-6xl my-12 text-black font-extrabold tracking-tighter leading-tight lg:-mx-12">{{ page.title }}</h1>
    <p class="text-gray-900 text-lg pb-12 font-extrabold leading-4">{{page.subtitle}}</p>

    {% assign postsByYear = site.posts | group_by_exp:"post", "post.date | date: '%Y'" %}

    <div class="lg:grid lg:grid-cols-3 lg:gap-8">
        {% for year in postsByYear %}
            <div>
                <h2 class="text-3xl font-extrabold text-yellow-400">{{ year.name }}</h2>
            </div>
            <div class="mt-12 lg:mt-0 lg:col-span-2">
                {% for post in year.items %}

                    {% unless post.image_path %}
                            <div class="mt-6">
                                <div class="my-8 tracking-tight font-semibold">
                                    <a href="{{ post.url }}" class="flex items-center space-x-4">
                                        <time class="text-black" datetime="{{ post.date_short }}">{{ post.date_short }}</time>
                                        <h3 class=" text-xl leading-4 font-semibold text-blue-600 border-b border-blue-600 pb-1 hover:text-yellow-500 hover:border-yellow-500 ">
                                            {{ post.title }}
                                        </h3>
                                        {% if post.image_path %}
                                            <span class="inline-block align-middle h-8 w-8 rounded-full overflow-hidden ">
                                                <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"  />
                                                </svg>
                                            </span>
                                        {% endif %}
                                    </a>
                                </div>
                            </div>
                        {% endunless %}

                {% endfor %}
            </div>
        {% endfor %}
    </div>
</div>
